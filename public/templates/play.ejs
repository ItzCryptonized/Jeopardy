<html data-bs-theme="dark">
  <head>
    <title>Jeoperdy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="container-xl" style="height: 100%">
      <table class="table table-dark" style="display: none">
        <thead>
          <tr>
            <% categories.forEach(category => { %>
            <th scope="col"><%= category.name %></th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < 5; i++) { %>
          <tr>
            <% categories.forEach(category => { %>
            <td>
              <button
                class="btn btn-outline-info"
                style="width: 75%"
                data-category="<%= category.name %>"
                data-value="<%= 200 * (i+1) %>"
              >
                <%= 200 * (i+1) %>
              </button>
            </td>
            <% }) %>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="modal fade" id="modal-loading" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div
            class="modal-body d-flex flex-column align-items-center justify-content-center"
          >
            <div class="spinner-border" role="status"></div>
            <p id="modal-loading-text">Attempting to connect to lobby...</p>
          </div>
        </div>
      </div>
    </div>

    <div
      class="modal fade"
      id="modal-name"
      data-bs-keyboard="false"
      data-bs-backdrop="static"
      tabindex="-1"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div
            class="modal-body d-flex flex-column align-items-center justify-content-center"
          >
            <label for="input-name" class="form-label">Enter your name</label>
            <input class="form-control" id="input-name" />
            <button class="btn btn-outline-primary mt-3" id="btn-name">
              Join Lobby
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.socket.io/4.6.1/socket.io.min.js"
      integrity="sha384-KA7m0DwgQGmeRC6Xre3hJO+ZxpanOauVh4Czdqbg8lDKJ3bZZYVYmP+y4F31x40L"
      crossorigin="anonymous"
    ></script>
    <script>
      var socket = io();
    </script>
    <script src="/js/socket.js"></script>
    <script src="/js/play.js"></script>
  </body>
</html>
